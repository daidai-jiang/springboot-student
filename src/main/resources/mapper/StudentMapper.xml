<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kby.student.mapper.StudentMapper">

    <select id="queryStudent" resultType="com.kby.student.entity.Student">
        select s.studentNo, s.loginPwd, s.studentName, s.sex, s.gradeId, g.gradeName, s.phone, s.address from student s inner join grade g on s.gradeId=g.gradeId
        <where>
            <if test="stuNo != null">
                and s.studentNo = #{stuNo}
            </if>
            <if test="stuName != null and stuName != ''">
                and s.studentName like concat('%', #{stuName}, '%')
            </if>
        </where>
    </select>

